<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/very_small_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/layerCodeTextView"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/very_small_margin"
        android:text=""
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/layerNameTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/layerNameTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/purple_700"
        app:layout_constraintStart_toEndOf="@+id/layerCodeTextView"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>