<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".activities.MapsActivity" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:alpha="@dimen/white_value_alpha"
        android:background="#ffffff"
        app:layout_constraintStart_toStartOf="@id/markerLabel"
        app:layout_constraintTop_toBottomOf="@id/markerLabel"
        tools:listitem="@layout/marker_item" />

    <TextView
        android:id="@+id/markerLabel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/small_margin"
        android:background="@color/purple_700"
        android:padding="@dimen/small_margin"
        android:text="Markers"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/layerLabel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/small_margin"
        android:background="@color/purple_700"
        android:padding="@dimen/small_margin"
        android:text="@string/layers"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv"  />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/layerRecyclerView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:alpha="@dimen/white_value_alpha"
        android:background="#ffffff"
        app:layout_constraintStart_toStartOf="@id/markerLabel"
        app:layout_constraintTop_toBottomOf="@id/layerLabel"
        tools:listitem="@layout/marker_item" />


</androidx.constraintlayout.widget.ConstraintLayout>
