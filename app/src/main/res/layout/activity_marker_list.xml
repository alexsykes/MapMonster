<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MarkerListActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".activities.MarkerListActivity" />


    <LinearLayout
        android:id="@+id/markerInfoPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:elevation="@dimen/large_margin"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/markerIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_500"
            android:elevation="@dimen/small_margin"
            android:padding="@dimen/small_margin"
            android:text="@string/markerid"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/markerLatTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="@dimen/small_margin"
            android:padding="@dimen/small_margin"
            android:text="@string/lat"
            android:textColor="@color/teal_700"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/markerLngTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="@dimen/small_margin"
            android:padding="@dimen/small_margin"
            android:text="@string/lng"
            android:textColor="@color/teal_700"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/markerNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="@dimen/small_margin"
            android:hint="@string/marker_name"
            android:imeOptions="actionNext"
            android:inputType="textNoSuggestions"
            android:minHeight="48dp"
            android:padding="@dimen/small_margin"
            android:textColor="@color/teal_700"

            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/markerCodeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="@dimen/small_margin"
            android:hint="@string/marker_code"
            android:imeOptions="actionNext"
            android:inputType="textNoSuggestions"
            android:minHeight="48dp"
            android:padding="@dimen/small_margin"
            android:textColor="@color/teal_700"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/markerNotesEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="@dimen/small_margin"
            android:hint="@string/marker_notes"
            android:imeOptions="actionDone"
            android:inputType="textNoSuggestions"
            android:minHeight="48dp"
            android:padding="@dimen/small_margin"
            android:singleLine="false"
            android:textColor="@color/teal_700"
            tools:ignore="TextContrastCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:elevation="@dimen/large_margin"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:elevation="@dimen/large_margin"
                android:text="@string/save" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layerPanelLinearLayout"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/small_margin"
        android:elevation="@dimen/small_margin"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/addMarkerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/map">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/showLayerList"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="0dp"
            android:background="@color/purple_500"
            android:elevation="6dp"
            android:padding="@dimen/small_margin"
            android:text="@string/show_layer_list"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sectionListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/large_margin"
            android:overScrollMode="always"
            android:translationZ="5dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addMarkerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/add_marker"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@android:color/transparent"
        app:backgroundTint="@android:color/transparent"
        android:outlineProvider="none"
        android:elevation="0dp"
        app:elevation="0dp"
        app:srcCompat="@android:drawable/ic_input_add"
        tools:ignore="ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>